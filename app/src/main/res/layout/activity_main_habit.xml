<?xml version="1.0" encoding="utf-8"?>
<!--Adapted from lonely twitter-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jm.joeymich_habittracker.MainHabitActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Habit"
        android:id="@+id/newHabit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Change Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/newHabit"
        android:layout_alignStart="@+id/newHabit"
        android:id="@+id/changeDay"
        android:onClick="changeDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="32dp"
        android:id="@+id/currDateText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed recently:"
        android:paddingTop="45dp"
        android:paddingRight="20dp"
        />

    <ListView
        android:id="@+id/completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="205dp"
        android:layout_below="@+id/changeDay"
        android:layout_toLeftOf="@+id/newHabit"
        android:layout_toStartOf="@+id/newHabit"
        android:paddingRight="20dp"/>
    <TextView
        android:paddingTop="290dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Completed Recently:"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notCompleted"
        android:paddingTop="320dp"
        android:paddingRight="120dp"
        />
</RelativeLayout>
